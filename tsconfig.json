{
  "compilerOptions": {
	"target": "ES2018",
	"module": "CommonJS",
	"lib": [
	  "DOM",
	  "ESNext"
	],
	"jsx": "react",
	"sourceMap": true,
	"declaration": true,
	"outDir": "dist",
	"rootDir": "src",
	"esModuleInterop": true,
	"resolveJsonModule": true,
	"noImplicitAny": true
  },
  "include": [
	"src/**/*"
  ],
  "exclude": [
	"node_modules",
	"dist"
  ]
}